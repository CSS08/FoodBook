<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_margin="4dp"
    android:background="@drawable/list_item_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/im_recipe_steps_thumbnail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:contentDescription="@string/recipe_steps_thumbnail"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_recipe_steps"/>

    <TextView
        android:id="@+id/tv_recipe_short_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"
        android:padding="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Recipe Ingredients"/>

</LinearLayout>